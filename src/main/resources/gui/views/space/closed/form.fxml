<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="347.0">
        <StackPane rotate="-1.2" styleClass="effect-paper" />
        <StackPane rotate="1.2" styleClass="effect-paper" />
        <VBox spacing="30.0" styleClass="container-box">
            <VBox spacing="30.0">
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                      <JFXTextField fx:id="nameField" labelFloat="true" promptText="Nombre" HBox.hgrow="ALWAYS" />
                  <JFXCheckBox fx:id="availableField" text="Disponible" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <JFXTextField fx:id="streetField" labelFloat="true" prefHeight="25.0" prefWidth="160.0" promptText="Calle" />
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
                  <JFXComboBox fx:id="cityField" prefHeight="25.0" prefWidth="160.0" promptText="Ciudad" />
               </children>
            </HBox>
            <HBox>
               <children>
                      <JFXTextField fx:id="latitudeField" labelFloat="true" prefHeight="25.0" prefWidth="160.0" promptText="Latitud" />
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
                  <JFXTextField fx:id="longitudeField" labelFloat="true" prefHeight="25.0" prefWidth="160.0" promptText="Longitud" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <JFXTextField fx:id="capacityField" labelFloat="true" prefHeight="25.0" prefWidth="160.0" promptText="Capacidad" />
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
                  <JFXTextField fx:id="radiusField" labelFloat="true" prefHeight="25.0" prefWidth="160.0" promptText="Radio" />
               </children>
            </HBox>
            <JFXComboBox fx:id="categoryField" labelFloat="true" maxWidth="1.7976931348623157E308" promptText="Categoría" />
            <JFXComboBox fx:id="entryCampaignField" labelFloat="true" maxWidth="1.7976931348623157E308" promptText="Campaña de entrada" />
            <JFXComboBox fx:id="exitCampaignField" labelFloat="true" maxWidth="1.7976931348623157E308" promptText="Campaña de salida" />
            <HBox spacing="5.0">
               <children>
                  <JFXComboBox fx:id="responsibleField" labelFloat="true" maxWidth="1.7976931348623157E308" promptText="Responsable" HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="addButton" contentDisplay="GRAPHIC_ONLY">
                     <graphic>
                        <FontIcon iconColor="#4d4d4d" iconLiteral="fas-plus" />
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <JFXButton fx:id="cancelButton" styleClass="btn,btn-gray" text="Cancelar" />
                <JFXButton fx:id="submitButton" styleClass="btn,btn-green" text="Guardar" />
            </HBox>
        </VBox>
    </StackPane>
</StackPane>
